# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/video_tagging?retryWrites=true&w=majority

# Database name (optional, defaults to video_tagging)
DATABASE_NAME=video_tagging

# OpenAI API Key for Whisper API and ChatGPT
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Frontend URL for CORS (optional)
# Set this to your frontend domain for production
FRONTEND_URL=https://your-frontend-domain.com

# Maximum file size in bytes (optional, defaults to 100MB)
MAX_FILE_SIZE=104857600

# Maximum number of tags per video (optional, defaults to 20)
MAX_TAGS=20 